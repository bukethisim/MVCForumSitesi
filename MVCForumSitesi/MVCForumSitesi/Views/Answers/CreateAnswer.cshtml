
@{
    ViewBag.Title = "CreateAnswer";
}

<div class="container bootstrap snippet" style="margin-top:850px;">
    <div class="row">
        @using (Html.BeginForm("CreateAnswer", "Answers", FormMethod.Post, new { @class = "form" }))
        {
            <div class="col-sm-1"></div>
            <div class="col-sm-3">
                <!--left col-->

                <div class="text-center">
                    <img src="@ViewBag.QuestionPic" class="avatar  img-thumbnail" alt="avatar" />
                </div><br>
            </div><!--/col-3-->

            <div class="col-sm-8">
                <div class="tab-content">
                    <div class="tab-pane active" id="home">

                        <div class="form-group">
                            <div class="col-xs-8">
                                @Html.Label("Cevap", new { @class = "control-label" })
                                @Html.TextArea("answer",new { @class="form-control"})
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-8 text-right">
                                <br>
                                @Html.ActionLink("Vazgeç", "GetQuestions", "Questions", new { @catid = TempData["catıd"] }, new { @class="btn btn-danger", })

                                <button class="btn btn-primary" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Kaydet</button>

                            </div>
                        </div>
                    </div><!--/tab-pane-->

                </div><!--/tab-pane-->
            </div><!--/tab-content-->
        }
    </div><!--/col-9-->
</div><!--/row-->
