@using Entity
@model List<Answer>

@{
    ViewBag.Title = "GetAnswers";
}


<div class="container bootstrap snippet" style="margin-top:850px;">
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-3">
            <!--left col-->

            <div class="text-center">
                <img src="@ViewBag.Image" class="avatar  img-thumbnail" alt="avatar" />
            </div><br>
        </div><!--/col-3-->


        @foreach (var item in Model)
        {
            <div class="col-sm-8">
                <div class="tab-content">
                    <div class="tab-pane active" id="home">
                        <div class="form-group">
                            <div class="col-xs-8">

                                @Html.TextArea("ans", item.AnswerContent, new { @class = "form-control", @readonly = "yes", @style = "resize:none" })
                                <p class="text-right">@item.Person.UserName</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div><!--/row-->
    <div class="row text-center">
        @if (ViewBag.PrevVisible)
        {
            <a href="?id=@ViewBag.questionId&page=@Html.Raw(ViewBag.CurrentPage-1)">Önceki</a>
        }

        @{
            string c = string.Empty;
        }
        @for (int i = ViewBag.Start; i <= ViewBag.End; i++)
        {
            c = i == ViewBag.CurrentPage ? "active" : string.Empty;
            <a href="/Answers/GetAnswers?id=@ViewBag.questionId&page=@i" class="@c pagination">@i</a>

        }
        @if (ViewBag.NextVisible)
        {
            <a href="?id=@ViewBag.questionId&page=@Html.Raw(ViewBag.CurrentPage+1)">Sonraki</a>
        }

    </div>
</div>



