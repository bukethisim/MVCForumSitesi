@using Entity.ViewModels
@model RegisterViewModel
@{
    Layout = null;
}

<head>
    <!-- Standard Meta -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <!-- Site Properties -->
    <title>Bootstrap 4 Register Form</title>
    <!-- Stylesheets -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

    <style>
        @@media(min-width: 768px) {
            .field-label-responsive {
                padding-top: .5rem;
                text-align: right;
            }
        }

        .container {
            width: 650px;
            margin: auto;
            margin-top: 200px;
            
        }
        body {
           background: #DE6262;
            background: -webkit-linear-gradient(to bottom, #FFB88C, #DE6262);
            background: linear-gradient(to bottom, #FFB88C, #DE6262);
            float: left;
            width: 100%;
            height: 100%;
        }
    </style>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm("Register", "Members", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form-horizontal", }))
        {
            @Html.AntiForgeryToken()

            if (ViewBag.Erros != null && ViewBag.Erros.Count() != 0)
            {
                <div class="alert alert-danger">
                    @foreach (string item in ViewBag.Errors)
                    {
                        <span class="text-danger align-middle">
                            <i class="fa fa-close">  @item</i>
                        </span>
                    }
                </div>
            }


            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <h2>Kullanıcı Kayıt</h2>
                    <hr>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3 field-label-responsive">
                    @Html.Label("Fotoğraf", new { @class = "control-label" })
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                            <div class="input-group-addon" style="width: 2.6rem"><i class="fas fa-image"></i></div>
                            @Html.TextBox("img", null, new { @type = "file", @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3 field-label-responsive">
                    @Html.LabelFor(x => x.UserName, new { @class = "control-label" })
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                            <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-user"></i></div>
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "Kullanıcı Adı" })
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-control-feedback">
                        <span class="text-danger align-middle">
                            <!-- Put name validation error messages here -->
                        </span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3 field-label-responsive">
                    @Html.LabelFor(x => x.hasLesson, new { @class = "control-label" })
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                            <div class="input-group-addon" style="width: 2.6rem"><i class="fas fa-graduation-cap"></i></div>
                            @Html.RadioButton("hasLesson",false, new { @id = "student" })
                            @Html.Label("Öğrenci", new { @for = "student" })
                            @Html.RadioButton("hasLesson",true, new { @id = "teacher" })
                            @Html.Label("Öğretmen", new { @for = "teacher" })
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-control-feedback">
                        <span class="text-danger align-middle">
                            <!-- Put name validation error messages here -->
                        </span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3 field-label-responsive">
                    @Html.LabelFor(x => x.Email, new { @class = "control-label" })
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                            <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-at"></i></div>
                            @Html.TextBoxFor(x=> x.Email, new { @class="form-control", @placeholder="Email giriniz",
                           @required ="required"})
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3 field-label-responsive">
                    @Html.Label("Şifre", new { @class = "control-label" })
                </div>
                <div class="col-md-6">
                    <div class="form-group has-danger">
                        <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                            <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-key"></i></div>
                            @Html.TextBox("Pass", null, new { @type = "password", @class = "form-control", @placeholder = "Şifre" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6 text-right">
                    <button class="btn btn-success"><i class="fa fa-user-plus"></i> Kayıt Ol</button>
                </div>
            </div>
        }
    </div>
</body>

