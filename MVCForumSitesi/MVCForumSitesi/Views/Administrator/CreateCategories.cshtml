@using Entity
@model Category
@{
    ViewBag.Title = "CreateCategories";
}

<div class="container">
    @using (Html.BeginForm("CreateCategories", "Administrator", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        <div class="col-sm-1"></div>
        <div class="col-sm-3">
            <!--left col-->

            <div class="text-center">
                <img src="~/Content/Image/iconfinder_0602-question-mark_206748 (1).png" class="avatar  img-thumbnail" alt="avatar" />
                @*<input type="file" class="text-center center-block file-upload">*@
                @Html.TextBox("image", null, new { @type = "file", @class = "text-center center-block file-upload" })


            </div><br>
        </div><!--/col-3-->

        <div class="col-sm-8">
            <div class="tab-content">
                <div class="tab-pane active" id="home">

                    <div class="form-group">
                        <div class="col-xs-8">
                            @Html.LabelFor(x => x.CategoryName, new { @class = "control-label" })
                            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-8 text-right">
                            <br>
                            <button class="btn btn-primary" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Kaydet</button>
                        </div>
                    </div>
                </div><!--/tab-pane-->

            </div><!--/tab-pane-->
        </div><!--/tab-content-->

    }
</div>

<script>
    $(document).ready(function () {
        var readURL = function (input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('.avatar').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }
        $(".file-upload").on('change', function () {
            readURL(this);
        });
    });
</script>
